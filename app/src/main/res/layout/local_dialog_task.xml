<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="94dp">

    <ImageView
        android:id="@+id/rowContainerTask2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/border_row"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51" />

    <ImageView
        android:id="@+id/mytaskimg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/mikrosmelissokomos"
        app:layout_constraintBottom_toBottomOf="@+id/rowContainerTask2"
        app:layout_constraintStart_toStartOf="@+id/rowContainerTask2"
        app:layout_constraintTop_toTopOf="@+id/rowContainerTask2"/>

    <TextView
        android:id="@+id/txttitlerowmytask2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/mytaskimg2"
        app:layout_constraintTop_toTopOf="@+id/rowContainerTask2" />

    <TextView
        android:id="@+id/txtdecrrowmytask2"
        android:layout_width="246dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/mytaskimg2"
        app:layout_constraintEnd_toEndOf="@+id/rowContainerTask2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/mytaskimg2"
        app:layout_constraintTop_toBottomOf="@+id/txttitlerowmytask2"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>